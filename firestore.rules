rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE APOYO (Sintaxis correcta para Firebase) ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Funci√≥n directa para obtener el rol sin usar 'let' o 'if'
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserRole() == 'superadmin';
    }

    function isAdmin() {
      return isSignedIn() && (getUserRole() == 'admin' || getUserRole() == 'superadmin');
    }

    // --- REGLAS DE COLECCIONES ---

    match /users/{userId} {
      // Importante: El usuario debe poder leer su propio documento para que la app funcione
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isSuperAdmin();
      allow list: if isAdmin();
    }

    match /partners/{partnerId} {
      allow get: if isOwner(partnerId) || isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if isOwner(partnerId) || isSuperAdmin();

      // Reglas para subcolecciones (Comisiones, Pagos, Notificaciones)
      match /{allSubcollections=**} {
        allow read: if isOwner(partnerId) || isAdmin();
        allow write: if isOwner(partnerId) || isSuperAdmin();
      }
    }
    
    match /commission_schemes/{id} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    match /rules/{id} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
  }
}
